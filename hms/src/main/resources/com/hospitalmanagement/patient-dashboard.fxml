<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospitalmanagement.PatientDashboardController" prefWidth="1200" prefHeight="800" style="-fx-background-color: #f5f5f5;">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #00b3a6, #00d4c8); -fx-padding:20;">
         <children>
            <VBox spacing="2.0">
               <children>
                  <Label text="Hasta Ekranı" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                  <Label fx:id="patientNameLabel" style="-fx-text-fill: white; -fx-font-size: 14px;" />
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" styleClass="btn-logout" text="Çıkış" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 25;">
         <children>
            <GridPane hgap="15" vgap="12" style="-fx-background-color:white; -fx-background-radius:12; -fx-padding:20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);" prefWidth="1100">
               <columnConstraints>
                  <ColumnConstraints percentWidth="20" />
                  <ColumnConstraints percentWidth="80" />
               </columnConstraints>
               <children>
                  <Label text="Ad:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size:13px; -fx-font-weight:bold; -fx-text-fill:#333;" />
                  <Label fx:id="lblName" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size:13px; -fx-text-fill:#555;" />
                  <Label text="E-posta:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size:13px; -fx-font-weight:bold; -fx-text-fill:#333;" />
                  <Label fx:id="lblEmail" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size:13px; -fx-text-fill:#555;" />
                  <Label text="Telefon:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size:13px; -fx-font-weight:bold; -fx-text-fill:#333;" />
                  <Label fx:id="lblPhone" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-size:13px; -fx-text-fill:#555;" />
                  <Label text="Sigorta No:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size:13px; -fx-font-weight:bold; -fx-text-fill:#333;" />
                  <Label fx:id="lblInsurance" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-font-size:13px; -fx-text-fill:#555;" />
               </children>
            </GridPane>
            <HBox spacing="12" alignment="CENTER" style="-fx-padding:10; -fx-background-color:white; -fx-background-radius:12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
               <children>
                  <Button text="Randevu Oluştur" onAction="#handleCreateAppointment" prefHeight="40" prefWidth="160" style="-fx-font-size:13px; -fx-font-weight:bold; -fx-background-radius:8;" styleClass="btn-primary" />
                  <Button text="Randevuları Gör" onAction="#refreshAppointments" prefHeight="40" prefWidth="160" style="-fx-font-size:13px; -fx-background-radius:8;" styleClass="btn-secondary" />
                  <Button text="Tıbbi Kayıtlar" onAction="#handleViewMedicalRecords" prefHeight="40" prefWidth="160" style="-fx-font-size:13px; -fx-background-radius:8;" styleClass="btn-secondary" />
                  <Button text="Randevu İptal" onAction="#handleCancelAppointment" prefHeight="40" prefWidth="140" style="-fx-font-size:13px; -fx-background-radius:8;" styleClass="btn-secondary" />
                  <Button text="Doktoru Değerlendir" onAction="#handleReviewDoctor" prefHeight="40" prefWidth="160" style="-fx-font-size:13px; -fx-background-radius:8;" styleClass="btn-secondary" />
               </children>
            </HBox>
            <VBox spacing="12" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" style="-fx-background-color:white; -fx-background-radius:12; -fx-padding:20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
               <children>
                  <Label text="Randevularım" style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#00b3a6;" />
                  <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding:10; -fx-background-color:#f9f9f9; -fx-border-radius:8; -fx-border-color:#e0e0e0;">
                     <children>
                        <Label text="Filtrele:" style="-fx-font-size:13px; -fx-font-weight:bold; -fx-text-fill:#333;" />
                        <Label text="Doktor:" style="-fx-font-size:12px; -fx-text-fill:#666;" />
                        <ComboBox fx:id="doctorFilterCombo" prefWidth="180" style="-fx-font-size:12px;">
                           <items />
                        </ComboBox>
                        <Label text="Hastane:" style="-fx-font-size:12px; -fx-text-fill:#666;" />
                        <ComboBox fx:id="hospitalFilterCombo" prefWidth="180" style="-fx-font-size:12px;">
                           <items />
                        </ComboBox>
                        <Label text="Klinik:" style="-fx-font-size:12px; -fx-text-fill:#666;" />
                        <ComboBox fx:id="clinicFilterCombo" prefWidth="180" style="-fx-font-size:12px;">
                           <items />
                        </ComboBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="Filtreleri Temizle" onAction="#handleClearFilters" prefHeight="35" prefWidth="140" style="-fx-font-size:12px; -fx-background-radius:6;" styleClass="btn-secondary" />
                     </children>
                  </HBox>
                  <TableView fx:id="appointmentsTable" prefHeight="300.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" style="-fx-font-size:14px; -fx-border-color:#e0e0e0; -fx-border-radius:8; -fx-background-radius:8;">
                     <columns>
                        <TableColumn text="ID" prefWidth="60" style="-fx-font-size:14px;" />
                        <TableColumn text="Doktor" prefWidth="200" style="-fx-font-size:14px;" />
                        <TableColumn text="Tarih" prefWidth="150" style="-fx-font-size:14px;" />
                        <TableColumn text="Saat" prefWidth="120" style="-fx-font-size:14px;" />
                        <TableColumn text="Durum" prefWidth="120" style="-fx-font-size:14px;" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>