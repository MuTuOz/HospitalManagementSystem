<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospitalmanagement.CreateAppointmentController" styleClass="card">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>
    <children>
        <Label text="Randevu Oluştur" style="-fx-font-size:16px; -fx-font-weight:bold;" />
        <HBox spacing="8">
            <children>
                <ComboBox fx:id="cityCombo" prefWidth="180" promptText="Şehir" />
                <ComboBox fx:id="hospitalCombo" prefWidth="260" promptText="Hastane" />
                <ComboBox fx:id="specialtyCombo" prefWidth="180" promptText="Klinik" />
            </children>
        </HBox>
        <HBox spacing="8">
            <children>
                <ComboBox fx:id="doctorCombo" prefWidth="300" promptText="Doktor" styleClass="input-field" />
                <Button fx:id="filterButton" text="Filtrele" styleClass="btn-secondary" />
            </children>
        </HBox>
        <ListView fx:id="availabilityList" prefHeight="200" prefWidth="600" styleClass="list-view" />
        <Label text="Notlar (isteğe bağlı)" />
        <TextArea fx:id="notesArea" prefRowCount="3" wrapText="true" styleClass="input-field" />
        <HBox spacing="10">
            <children>
                <Button fx:id="createButton" text="Randevu Oluştur" styleClass="btn-primary" />
                <Button fx:id="closeButton" text="Kapat" styleClass="btn-secondary" />
            </children>
        </HBox>
    </children>
</VBox>
