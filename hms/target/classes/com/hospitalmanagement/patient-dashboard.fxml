<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospitalmanagement.PatientDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Patient Portal" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" styleClass="btn-secondary" text="Çıkış" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">
         <children>
            <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-text-fill: #07575B; -fx-font-weight:600;" text="Hasta Dashboard'a Hoş Geldiniz!" />
            <GridPane hgap="10" vgap="8" styleClass="card">
               <columnConstraints>
                  <ColumnConstraints percentWidth="25" />
                  <ColumnConstraints percentWidth="75" />
               </columnConstraints>
               <children>
                  <Label text="Ad:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                  <Label fx:id="lblName" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                  <Label text="E-posta:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                  <Label fx:id="lblEmail" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                  <Label text="Telefon:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                  <Label fx:id="lblPhone" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                  <Label text="Sigorta No:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                  <Label fx:id="lblInsurance" GridPane.rowIndex="3" GridPane.columnIndex="1" />
               </children>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <Button text="Randevu Oluştur" onAction="#handleCreateAppointment" />
                  <Button text="Randevuları Görüntüle" onAction="#refreshAppointments" />
                  <Button text="Tıbbi Kayıtları Gör" onAction="#handleViewMedicalRecords" />
                  <Button text="Randevuyu İptal Et" onAction="#handleCancelAppointment" />
                  <Button text="Profili Düzenle" onAction="#handleEditProfile" />
                  <Button text="Şifre Değiştir" onAction="#handleChangePassword" />
               </children>
            </HBox>

            <TableView fx:id="appointmentsTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn text="ID" prefWidth="60" />
                  <TableColumn text="Doktor" prefWidth="180" />
                  <TableColumn text="Tarih" prefWidth="120" />
                  <TableColumn text="Saat" prefWidth="100" />
                  <TableColumn text="Durum" prefWidth="100" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>