<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospitalmanagement.ManagerDashboardController">
    <children>
        <VBox prefHeight="800.0" prefWidth="1100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox spacing="5.0" styleClass="header">
                    <children>
                        <Label fx:id="welcomeLabel" text="Hastane Yönetim Dashboard" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="hospitalLabel" text="Hastane Yönetim Sistemi" textFill="#ecf0f1" />
                    </children>
                </VBox>
                <TabPane prefHeight="700.0" prefWidth="1100.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Personel Yönetimi">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="1000.0">
                                    <children>
                                        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                                            <children>
                                                <HBox spacing="10.0">
                                                    <children>
                                                        <Label text="Personel Listesi" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                                                        <Button mnemonicParsing="false" onAction="#loadStaff" text="Yükle" style="-fx-padding: 5 15;" />
                                                        <Button mnemonicParsing="false" onAction="#refreshStaff" text="Yenile" style="-fx-padding: 5 15;" />
                                                        <Button mnemonicParsing="false" onAction="#addDoctor" text="Ekle" style="-fx-padding: 5 12;" />
                                                        <Button mnemonicParsing="false" onAction="#editDoctor" text="Düzenle" style="-fx-padding: 5 12;" />
                                                        <Button mnemonicParsing="false" onAction="#deleteDoctor" text="Sil" style="-fx-padding: 5 12;" />
                                                    </children>
                                                </HBox>
                                                <TableView fx:id="staffTableView" prefHeight="500.0" VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn prefWidth="80.0" text="ID" />
                                                        <TableColumn prefWidth="150.0" text="Ad" />
                                                        <TableColumn prefWidth="150.0" text="E-posta" />
                                                        <TableColumn prefWidth="150.0" text="Uzmanlık" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Randevu Yönetimi">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="1000.0">
                                    <children>
                                        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                                            <children>
                                                <HBox spacing="10.0">
                                                    <children>
                                                        <Label text="Randevu Listesi" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                                                        <Button mnemonicParsing="false" onAction="#loadAppointments" text="Yükle" style="-fx-padding: 5 15;" />
                                                        <Button mnemonicParsing="false" onAction="#refreshAppointments" text="Yenile" style="-fx-padding: 5 15;" />
                                                    </children>
                                                </HBox>
                                                <TableView fx:id="appointmentTableView" prefHeight="500.0" VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn prefWidth="80.0" text="ID" />
                                                        <TableColumn prefWidth="120.0" text="Doktor" />
                                                        <TableColumn prefWidth="100.0" text="Hasta" />
                                                        <TableColumn prefWidth="100.0" text="Tarih" />
                                                        <TableColumn prefWidth="80.0" text="Saat" />
                                                        <TableColumn prefWidth="80.0" text="Durum" />
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="İstatistikler ve Raporlar">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="1000.0">
                                    <children>
                                        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                                            <children>
                                                <Label text="Hastane İstatistikleri ve Raporları" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                                                <HBox spacing="10.0">
                                                    <children>
                                                        <Button mnemonicParsing="false" onAction="#loadStatistics" text="İstatistikleri Göster" style="-fx-padding: 10 20;" />
                                                        <Button mnemonicParsing="false" onAction="#exportReportsCSV" text="Rapor (CSV)" style="-fx-padding: 10 20;" />
                                                    </children>
                                                </HBox>
                                                <Label fx:id="statisticsLabel" text="" style="-fx-font-size: 12; -fx-padding: 20;" wrapText="true" />
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <VBox spacing="5.0" style="-fx-padding: 10;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleChangePassword" styleClass="btn-secondary" text="Şifre Değiştir" />
                        <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="btn-primary" text="Çıkış Yap" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
